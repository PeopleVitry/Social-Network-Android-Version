<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/agress_soi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="Agression sur soi " />

        <Button
            android:id="@+id/agressionautrui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/agress_soi"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="88dp"
            android:text="Agression sur autrui" />

        <Button
            android:id="@+id/accident"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/agressionautrui"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="104dp"
            android:text="Accident" />

    </RelativeLayout>

</LinearLayout>